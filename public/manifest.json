{
  "manifest_version": 2,
  "name": "GitKraken Glo Chrome Extension",
  "description": "...",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "GitKraken Glo"
  },
  "icons": { 
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'", 
  "permissions": [
    "contextMenus",
    "identity",
    "storage", 
    "activeTab",
    "*://*.google.com/*",
    "*://*.github.com/*",
    "*://*.gitkraken.com/*"
  ]
}